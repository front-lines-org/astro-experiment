---
import HeaderLink from "./HeaderLink.astro";
import Tabs from "./Tabs.astro";
import { Icon } from "astro-icon";

const { hideTags } = Astro.props;
---

<header>
  <nav class="sm:p-0 p-2">
    <div class="grid overflow-hidden grid-cols-12 py-6 w-auto">
      <div class="col-start-1 sm:row-start-1">
        <div class="w-8 m-auto">
          <label for="my-drawer" class="drawer-button">
            <Icon pack="mdi" name="menu" />
          </label>
        </div>
      </div>
      <div class="sm:col-span-2 col-span-10 col-start-2 sm:row-start-1">
        <img
          class="sm:pl-0 lg:pl-2 pl-4 w-48 inline-block my-auto"
          src="/images/fn/logo.svg"
        />
      </div>
      <div class="sm:col-span-8 col-span-12 row-start-2 sm:row-start-1">
        {!hideTags && <Tabs />}
      </div>
      <div>
        <div class="w-8 m-auto text-base col-end-12">
          <Icon pack="mdi" name="search" />
        </div>
      </div>
    </div>
  </nav>
</header>
